<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:str="clr-namespace:Hash.Wpf.Strings.Extensions"
                    xmlns:local="clr-namespace:Hash.Wpf"
                    xml:space="preserve">

    <!-- Common -->
    <sys:String x:Key="String.AppName">HashCalculator</sys:String>
    <x:Static x:Key="String.Version" Member="local:App.SemVer"/>

    <sys:String x:Key="String.Title.Base">{0} {1}</sys:String>
    <str:Strings x:Key="String.Title" StringFormat="{StaticResource String.Title.Base}">
        <StaticResource ResourceKey="String.AppName"/>
        <StaticResource ResourceKey="String.Version"/>
    </str:Strings>

    <sys:String x:Key="String.CopyRight">Copyright © 2021-present Hibi_10000</sys:String>
    <sys:String x:Key="String.CreatedBy">CreatedBy : Hibi_10000</sys:String>

    <sys:String x:Key="String.Dl">DL : </sys:String>
    <sys:String x:Key="String.GitHub">GitHub</sys:String>

    <!-- HashForContextWindow -->
    <sys:String x:Key="String.AppName.Context">Hash for ContextMenu</sys:String>
    <str:Strings x:Key="String.Title.Context" StringFormat="{StaticResource String.Title.Base}">
        <StaticResource ResourceKey="String.AppName.Context"/>
        <StaticResource ResourceKey="String.Version"/>
    </str:Strings>

    <!-- AboutWindow -->
    <sys:String x:Key="String.VersionText.Base">Version : {0}</sys:String>
    <str:Strings x:Key="String.VersionText" StringFormat="{StaticResource String.VersionText.Base}">
        <StaticResource ResourceKey="String.Version"/>
    </str:Strings>

    <!-- Uri -->
    <sys:String x:Key="String.Uri.GitHub.Release">https://github.com/Hibi-10000/HashCalculator/releases/</sys:String>
    <str:Strings x:Key="String.Uri.GitHub.License" StringFormat="https://github.com/Hibi-10000/HashCalculator/blob/{0}/LICENSE.md">
        <StaticResource ResourceKey="String.Version"/>
    </str:Strings>
    <str:Strings x:Key="String.Uri.GitHub.Notice" StringFormat="https://github.com/Hibi-10000/HashCalculator/blob/{0}/NOTICE.md">
        <StaticResource ResourceKey="String.Version"/>
    </str:Strings>

</ResourceDictionary>
