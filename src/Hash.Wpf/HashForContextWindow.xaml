<Window x:Class="Hash.Wpf.HashForContextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Hash.Wpf"
        mc:Ignorable="d"
        Title="Hash for ContextMenu" Icon="./Resources/Hash.ico"
        MinHeight="237" MinWidth="505" Height="268" Width="560">
    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5,5,5,10">
            <Label Content="Hash for ContextMenu" FontSize="27" BorderThickness="1" Padding="10,0" HorizontalAlignment="Left" BorderBrush="Black" Background="White" Foreground="Lime" FontWeight="Bold"/>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                <Label Content="CreatedBy : Hibi__10000" Padding="0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="DL : " Padding="0"/>
                    <Label Padding="0">
                        <Hyperlink NavigateUri="https://github.com/Hibi-10000/HashCalculator/releases">
                            <TextBlock Text="GitHub"/>
                        </Hyperlink>
                    </Label>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Height="40">
                <TextBox Text="ファイルのパス" FontSize="14" TextWrapping="Wrap" Cursor="No" IsReadOnly="True" AllowDrop="False" AcceptsReturn="True"/>
            </Grid>
            <Grid Grid.Row="1" Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" SelectedIndex="0" Width="100" IsEditable="True">
                    <ComboBoxItem Content="Hashを選択"/>
                </ComboBox>
                <CheckBox Grid.Column="1" Margin="5,4,10,0" Content="大文字"/>
                <CheckBox Grid.Column="2" Margin="0,4,10,0" Content="ハイフン"/>
                <Button Grid.Column="4" Padding="30,0" Margin="0,0,4,0" Content="Hashをコピー"/>
                <Button Grid.Column="5" Padding="30,0" Foreground="Red" Content="Hashをリセット"/>
            </Grid>
            <Grid Grid.Row="2">
                <TextBox Text="ここにHash値が表示されます" FontSize="14" TextWrapping="Wrap" IsReadOnly="True"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="5">
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="Auto"/>
               <ColumnDefinition Width="*"/>
               <ColumnDefinition Width="9*" MaxWidth="68"/>
               <ColumnDefinition Width="Auto"/>
               <ColumnDefinition Width="Auto"/>
           </Grid.ColumnDefinitions>
           <Label Grid.Column="0" Padding="5,0" VerticalAlignment="Bottom" Content="Copyright © 2021-2024 Hibi__10000"/>
           <Button Grid.Column="2" Margin="0,0,2,0" Padding="10,5" FontSize="15" Content="Debug"/>
           <Button Grid.Column="3" Margin="2,0,2,0" Padding="10,5" FontSize="15" Content="HashCalculatorを起動"/>
           <Button Grid.Column="4" Margin="2,0,0,0" Padding="35,5" FontSize="15" Content="OK"/>
        </Grid>
    </Grid>
</Window>
